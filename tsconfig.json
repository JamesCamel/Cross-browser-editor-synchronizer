{
  
	"compilerOptions": {
    "watch": true,
    "esModuleInterop": true,
		"sourceMap": true,
		"noImplicitAny": false,
		"module": "commonjs",
		"target": "es6",
		"lib": [
			"es2015",
			"es2017",
      "dom",
      "es5"
		],
		"removeComments": true,
		"allowSyntheticDefaultImports": false,
		"allowJs": true,
		"baseUrl": "./",
		"types": [
			"chrome",
			"node"
		],
	}
}
