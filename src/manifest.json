{
    "name": "Cross browser text synchronizer",
    "version": "1.0",
    "description": "Build an Extension!",
    "permissions": ["storage"],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "content_scripts": [
        {
          "matches": ["https://markdown-it.github.io/"],
          "js": ["content/markdown_it.js"]
        },
        {
          "matches": ["https://gist.github.com/"],
          "js": ["content/gist.js"]
        }
      ],
    "manifest_version": 2
    
}